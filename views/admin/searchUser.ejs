<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Search</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
        <a href="/add" class="btn btn-sm btn-outline-secondary">+ New User</a>
      </div>
    </div>
  </div>
  
  <div class="table-responsive">
    <% if (users != "") { %>
    
        <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">isAdmin</th>
                <th scope="col" class="text-center">Action</th>
              </tr>
            </thead>
        
            <tbody>
              <% users.forEach(element => { %>
                <tr class="align-middle">
                  <td><%= element.firstName %></td>
                  <td><%= element.lastName %></td>
                  <td><%= element.email %></td>
                  <td><%= element.isAdmin %></td>
                  <td>
        
                    <div class="d-flex flex-row justify-content-center gap-2">
        
                      <a href="/admin/view/<%= element._id %>" type="button" class="btn btn-primary btn-sm">
                        <i class="bi bi-eye"></i>
                      </a>
        
                      <a href="/admin/edit/<%= element._id %>" type="button" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i>
                      </a>
                      
                      <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal"><i class="bi bi-person-x"></i></button>
                      <!-- <form action="/admin/edit/<%= element._id %>?_method=DELETE" method="POST" class="position-relative">
                        <button type="submit" class="btn btn-danger btn-sm">
                          <i class="bi bi-person-x"></i>
                        </button>
                      </form> -->
        
                    </div>
        
        
                  </td>
                </tr>
                  <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <div class="modal-title">You are about to remove a customer record.</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <p>
                  This will remove the user record of <b class="fw-bold"><%= element.firstName %> <%= element.lastName %></b><br/>
                  Are you sure?
                </p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form action="/admin/edit/<%= element._id %>?_method=DELETE" method="POST" class="position-relative">
                  <button type="submit" class="btn btn-danger">Yes, Remove User</button>
                </form>
              </div>
            </div>
          </div>
        </div>
              <% }) %>
            </tbody>
          </table>
  
    <% } else { %>
      <h2>No results found.</h2>
    <% } %>
  
  </div>